if(<%= @like.user_id %> == <%=current_user.id%>)
{

if( "<%= @like.likeable_type %>" == "Post")
{
	if($("#NoOfLikes-post-<%= @like.likeable_id %> button a").html()=="like")
	{
		$("#NoOfLikes-post-<%= @like.likeable_id %> button a ").html("unlike");
			noty({
			text:"You Liked a Post",
			type:"success",
			timeout:1000
		});
	}
	else{
		$("#NoOfLikes-post-<%= @like.likeable_id %> button a ").html("like");
		noty({
			text:"You unliked a Post",
			type:"success",
			timeout:1000
		});
	}
	$("#NoOfLikes-post-<%= @like.likeable_id %> p").html("Likes <%= Like.where(likeable_type:"Post",likeable_id:@like.likeable_id).length %>");
	
}
else if( "<%= @like.likeable_type %>" == "Comment"){

	if($("#NoOfLikes-comment-<%= @like.likeable_id %> button a").html()=="like")
	{
		$("#NoOfLikes-comment-<%= @like.likeable_id %> button a").html("unlike");
		noty({
			text:"You Liked a Comment",
			type:"success",
			timeout:1000
		});
	}
	else{
		$("#NoOfLikes-comment-<%= @like.likeable_id %> button a").html("like");
		noty({
			text:"You unliked a Comment",
			type:"success",
			timeout:1000
		});
	}

	$("#NoOfLikes-comment-<%= @like.likeable_id %> p").html("Likes <%= Like.where(likeable_type:"Comment",likeable_id:@like.likeable_id).length %>");
}
}
